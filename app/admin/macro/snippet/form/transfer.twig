<form class="form-horizontal well form-condensed" action="{{ env.server.REQUEST_URI }}" method="post">
<fieldset>
	<legend>{% trans "Transfer information" %}</legend>
	<div class="control-group">
		<label class="control-label" for="amount" >{% trans "Amount" %}</label>
		<div class="controls">
			<input type="text" id="name" placeholder="{% trans "Amount" %}" name="transfer[amount]" value="{{ transfer.amount }}">			
			{% if errors.amount %}<span class="help-inline">{{ errors.amount }}</span>{% endif %}
		</div>
	</div>
	
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">{% trans "Save" %} </button>
	</div>
</fieldset>
</form>